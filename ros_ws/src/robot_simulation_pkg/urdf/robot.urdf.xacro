<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="manipulator">

    <xacro:include filename="$(find robot_simulation_pkg)/urdf/robot_gazebo.xacro"/>
    <xacro:include filename="$(find robot_simulation_pkg)/urdf/robot_ros2_control.xacro"/>

    <xacro:property name="PI" value="3.14" />
    <xacro:property name="effort" value="30.0" />
    <xacro:property name="velocity" value="10.0" />

    <xacro:macro name="default_inertia" params="mass">
        <inertial>
            <mass value="${mass}"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
        </inertial>
    </xacro:macro>


    <!-- Start of the robot description-->

    <link name="world"/>

    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="-0.5 -.5 0"/>
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/basement.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.5 -.5 0"/>
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/basement.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:default_inertia mass="1"/>
    </link>

    <joint name="virtual_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="base_plate">
        <visual>
            <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56" />
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/base_plate.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56" />
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/base_plate.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:default_inertia mass="0.1"/>
    </link>

    <joint name="joint_1" type="revolute">
        <parent link="base_link"/>
        <child link="base_plate"/>
        <origin xyz="0 0 0.307" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
    </joint>

    <link name="forward_drive_arm">
        <visual>
            <origin xyz="0.19 0.06 -0.08" rpy="0 -${PI/2} ${PI/2}" />
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
                <box size="1.0 1.0 1.0" />
                <cylinder radius="1.0" length="1.0"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.19 0.06 -0.08" rpy="0 -${PI/2} ${PI/2}" />
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/forward_drive_arm.STL" scale="0.01 0.01 0.01"/>
                <box size="1.0 1.0 1.0" />
                <cylinder radius="1.0" length="1.0"/>
            </geometry>
        </collision>
        <xacro:default_inertia mass="1"/>
    </link>

    <joint name="joint_2" type="revolute">
        <parent link="base_plate"/>
        <child link="forward_drive_arm"/>
        <origin xyz="-0.02 0 0.35" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
    </joint>

    <link name="horizontal_arm">
        <visual>
            <origin xyz="-0.03 -0.4 -0.06" rpy="${PI/2} 0 ${PI/2}"/>
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="-0.03 -0.4 -0.06" rpy="${PI/2} 0 ${PI/2}"/>
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/horizontal_arm.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:default_inertia mass="0.1"/>
    </link>

    <joint name="joint_3" type="revolute">
        <parent link="forward_drive_arm"/>
        <child link="horizontal_arm"/>
        <origin xyz="0 0 0.8" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
    </joint>

    <link name="claw_support">
        <visual>
            <origin xyz="0 -0.05 -0.15" rpy="0 0 ${PI/2}" />
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/claw_support.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 -0.05 -0.15" rpy="0 0 ${PI/2}" />
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/claw_support.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:default_inertia mass="0.05"/>
    </link>

    <joint name="horizontal_arm_to_claw_support" type="fixed">
        <parent link="horizontal_arm"/>
        <child link="claw_support"/>
        <origin xyz="0 0.82 0" rpy="0 0 0"/>
    </joint>

    <link name="gripper_right">
        <visual>
            <origin xyz="-0.1 0.5 -0.1" rpy="0 0 -${PI/2}" />
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/right_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="-0.1 0.5 -0.1" rpy="0 0 -${PI/2}" />
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/right_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:default_inertia mass="0.01"/>
    </link>

    <joint name="joint_4" type="revolute">
        <parent link="claw_support"/>
        <child link="gripper_right"/>
        <origin xyz="-0.04 0.13 -0.1" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${PI/2}" upper="0.0" effort="${effort}" velocity="${velocity}"/>
    </joint>

    <link name="gripper_left">
        <visual>
            <origin xyz="-0.04 0.5 -0.1" rpy="0 0 -${PI/2}" />
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/left_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="-0.04 0.5 -0.1" rpy="0 0 -${PI/2}" />
            <geometry>
                <mesh filename="package://robot_simulation_pkg/meshes/left_finger.STL" scale="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <xacro:default_inertia mass="0.01"/>
    </link>

    <joint name="joint_5" type="revolute">
        <parent link="claw_support"/>
        <child link="gripper_left"/>
        <origin xyz="-0.22 0.13 -0.1" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <mimic joint="joint_4" multiplier="-1"/>
        <limit lower="0.0" upper="${PI/2}" effort="${effort}" velocity="${velocity}"/>
    </joint>

    <!-- End Effector frame-->
    <link name="end_effector"/>

    <joint name="joint_6" type="fixed">
        <parent link="claw_support"/>
        <child link="end_effector"/>
        <origin xyz="-0.13 0.59 -0.15" rpy="0 0 0"/>
    </joint>

</robot>
